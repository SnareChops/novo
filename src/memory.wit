// Memory management interface
interface memory {
    // Exports a linear memory with at least 1 page (64KB)
    type memory = linear-memory { min: 1 }

    // Memory regions
    record memory-layout {
        system-base: u32,
        lexer-state-base: u32,
        string-pool-base: u32,
        symbol-table-base: u32,
        general-alloc-base: u32
    }

    // Export the memory layout information
    export memory: memory
    export get-memory-layout: func() -> memory-layout
}

world memory-component {
    export memory
}
